.float-right {
  float: right;
};

.midi-control-label {
  height: 25px;
  border-bottom: 1px solid #ddd;
  background-color: #f5f5f5;
  border-top-left-radius: 3px;
  border-top-right-radius: 3px;
  text-align: center;

}

.midi-control-label p {
  font-size: 11px;
  padding-top: 5px;
};

.midi-control-box {
  float: left;
  width: 80px;
  height 102px;
  border: 1px solid #ddd;
  border-radius: 5px;
  margin: 2px;
};

.dial-box {
  margin: 9px;
  width: 60px;
  height 60px;
};

.drop-down-box {
  margin-top: 25px;
  margin-bottom: 15px;
  margin-left: auto;
  margin-right: auto;
  width: 60px;
};

.drop-down-select {
  position: relative;
  width: 70px;
  border: 1px solid #ccc;
  border-radius: 4px;
  padding-top: 8px;
  padding-bottom: 8px;
  padding-left: 4px;
  padding-right: 4px;
  margin-left: -5px;
};

.drop-down-option {
  width: auto;
};

.toggle-box {
  margin-top: 25px;
  margin-left: 15px;
  margin-right: auto;
};

.bit-mask-box {
  margin-top: 25px
  text-align: center;
  vertical-align: middle;
};

.output-error {
  border-color: #843534;
  -webkit-box-shadow: inset 0 1px 1px rgba(0,0,0,.075), 0 0 6px #ce8483;
  box-shadow: inset 0 1px 1px rgba(0,0,0,.075), 0 0 6px #ce8483;
};

.midi-settings-box {
  margin-left: 20px;
  margin-right: 20px;
  float: left;
};