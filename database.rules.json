{
  "rules": {
    "admin": {
      ".read": "auth != null && data.child('allowed').child(auth.uid).exists()",
      ".write": "auth != null && data.child('allowed').child(auth.uid).exists()"
    },
    "public": {
      "oldersynthremotes": {
        ".read": "auth != null",
        ".write": "auth != null && root.child('admin/allowed').child(auth.uid).exists()"
      },
      "synthremotes": {
        ".read": "auth != null",
        ".write": "auth != null && root.child('admin/allowed').child(auth.uid).exists()"
      },
      "users": {
        ".read": "auth != null",
        ".write": "auth != null"
      }
    }
  }
}